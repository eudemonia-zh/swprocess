{
    "workflow": "single",
    "pre-processing":{
        "trim": {
            "apply" : false,
            "start_time": 0,
            "end_time": 0.75
        },
        "mute": {
            "apply": false,
            "type": "interactive",
            "window kwargs": {}
        },
        "pad": {
            "apply" : false,
            "df": 0.5
        }    
    },
    "processing": {
        "type": "phaseshift",
        "fmin": 5,
        "fmax": 100,
        "vmin": 100,
        "vmax": 400,
        "nvel" : 200,
        "vspace": "linear",
        "fdbf-specific": {
            "weighting" : "invamp",
            "steering" : "plane"
        }
    },
    "plotting": {
        "signal-to-noise": {
            "perform":true,
            "kwargs":{}
        },
        "waterfall": {
            "perform":true,
            "kwargs":{}
        }
    }
}